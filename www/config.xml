<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id = "edu.nd.library"
        version = "2.1.0">
    <name>Hesburgh Libraries</name>

    <description>
        First mobile library app!
    </description>

    <author href="http://library.nd.edu" email="wits@listserv.library.nd.edu">
        Hesburgh Libraries Web Application Development Team
    </author>

   
    <access origin="http://m.library.nd.edu" subdomains="true" browserOnly="false" />
    <access origin="http://nd.edu" subdomains="true" browserOnly="false" />
    <access origin="http://mpprd.library.nd.edu" subdomains="true" browserOnly="false" />
    <access origin="http://map.nd.edu" subdomains="true" browserOnly="true" />
    <access origin="http://xerxes.library.nd.edu" subdomains="true" browserOnly="false" />
    <access origin="http://architecture.library.nd.edu" subdomains="true" browserOnly="false" />
    <access origin="http://bic.library.nd.edu" subdomains="true" browserOnly="false" />
    <access origin="http://chemistry.library.nd.edu" subdomains="true" browserOnly="false" />
    <access origin="http://engineering.library.nd.edu" subdomains="true" browserOnly="false" />
    <access origin="http://kkic.library.nd.edu" subdomains="true" browserOnly="false" />
    <access origin="http://mathematics.library.nd.edu" subdomains="true" browserOnly="false" />
    <access origin="http://radlab.library.nd.edu" subdomains="true" browserOnly="false" />
    <access origin="http://vrc.library.nd.edu" subdomains="true" browserOnly="false" />
    <access origin="http://libraryh3lp.com" subdomains="true" browserOnly="false" />
    <access origin="http://chat.libraryh3lp.com" subdomains="true" browserOnly="false" />
    

    <access origin="http://www.library.nd.edu" subdomains="false" browserOnly="true" />    

    <preference name="phonegap-version" value="2.1.0" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="permissions" value="none"/>
    <preference name="stay-in-webview" value="true" />    
    
    <icon src="icon.png" />
    <gap:splash src="splash.png" />
    <gap:plugin name="ChildBrowser" />

</widget>